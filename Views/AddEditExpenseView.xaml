<UserControl x:Class="ETAG_ERP.Views.AddEditExpenseControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             FlowDirection="RightToLeft"
             Background="#F8F8F8">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 🧾 محتوى النموذج -->
        <StackPanel Grid.Row="0" Margin="0 0 0 10" VerticalAlignment="Top">
            <TextBlock Text="تفاصيل المصروف" FontSize="20" FontWeight="Bold" Margin="0 0 0 20"/>

            <StackPanel Orientation="Horizontal" Margin="0 5">
                <TextBlock Text="التاريخ:" Width="100" VerticalAlignment="Center"/>
                <DatePicker SelectedDate="{Binding Expense.Date}" Width="200"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0 5">
                <TextBlock Text="النوع:" Width="100" VerticalAlignment="Center"/>
                <ComboBox SelectedItem="{Binding Expense.Type}" Width="200">
                    <ComboBoxItem Content="مصروف"/>
                    <ComboBoxItem Content="إيراد"/>
                </ComboBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0 5">
                <TextBlock Text="التصنيف:" Width="100" VerticalAlignment="Center"/>
                <TextBox Text="{Binding Expense.Category}" Width="200"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0 5">
                <TextBlock Text="الوصف:" Width="100" VerticalAlignment="Center"/>
                <TextBox Text="{Binding Expense.Description}" Width="300"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0 5">
                <TextBlock Text="المبلغ:" Width="100" VerticalAlignment="Center"/>
                <TextBox Text="{Binding Expense.Amount}" Width="200"/>
            </StackPanel>
        </StackPanel>

        <!-- ✅ أزرار العمليات -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="حفظ" Width="100" Margin="5" Command="{Binding SaveCommand}"/>
            <Button Content="إلغاء" Width="100" Margin="5" Command="{Binding CancelCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>
