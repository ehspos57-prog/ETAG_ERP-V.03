<UserControl x:Class="ETAG_ERP.Views.AccountsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="720" d:DesignWidth="1100"
             Background="#F8F8F8">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 🔍 فلاتر البحث -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0 0 0 10" VerticalAlignment="Top">
            <TextBlock Text="من:" Margin="5" VerticalAlignment="Center"/>
            <DatePicker Width="120" SelectedDate="{Binding FromDate}" Margin="0,0,10,0"/>

            <TextBlock Text="إلى:" Margin="5" VerticalAlignment="Center"/>
            <DatePicker Width="120" SelectedDate="{Binding ToDate}" Margin="0,0,10,0"/>

            <TextBlock Text="النوع:" Margin="5" VerticalAlignment="Center"/>
            <ComboBox Width="120" Margin="0,0,10,0"
                      ItemsSource="{Binding TransactionTypes}"
                      SelectedItem="{Binding SelectedType}"/>

            <TextBox Width="200" Margin="0,0,10,0"
                     Text="{Binding SearchText}"
                     ToolTip="ابحث بالكلمة أو رقم الفاتورة"/>

            <Button Content="تصفية" Width="100" Command="{Binding FilterCommand}" />
        </StackPanel>

        <!-- 📊 ملخص الحسابات -->
        <Border Grid.Row="1" Background="#EDEDED" CornerRadius="8" Padding="10" Margin="0 0 0 10">
            <UniformGrid Columns="3" Rows="2" HorizontalAlignment="Stretch">
                <StackPanel>
                    <TextBlock Text="إجمالي المبيعات" FontWeight="Bold"/>
                    <TextBlock Text="{Binding TotalSales}" Foreground="Green"/>
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="إجمالي المشتريات" FontWeight="Bold"/>
                    <TextBlock Text="{Binding TotalPurchases}" Foreground="Red"/>
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="إجمالي المرتجعات" FontWeight="Bold"/>
                    <TextBlock Text="{Binding TotalReturns}" Foreground="Orange"/>
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="صافي الربح" FontWeight="Bold"/>
                    <TextBlock Text="{Binding NetProfit}" Foreground="DarkGreen"/>
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="المصروفات" FontWeight="Bold"/>
                    <TextBlock Text="{Binding TotalExpenses}" Foreground="Brown"/>
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="الرصيد الحالي" FontWeight="Bold"/>
                    <TextBlock Text="{Binding CurrentBalance}" Foreground="Blue"/>
                </StackPanel>
            </UniformGrid>
        </Border>

        <!-- 🧾 تبويبات -->
        <TabControl Grid.Row="2" Margin="0 0 0 10" SelectedIndex="{Binding SelectedTabIndex, Mode=TwoWay}">
            <!-- تبويب الحركات -->
            <TabItem Header="الحركات">
                <DataGrid ItemsSource="{Binding Transactions}"
                          SelectedItem="{Binding SelectedTransaction}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          IsReadOnly="True"
                          Margin="0">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="التاريخ" Binding="{Binding Date, StringFormat=\{0:yyyy-MM-dd\}}" Width="*"/>
                        <DataGridTextColumn Header="النوع" Binding="{Binding Type}" Width="*"/>
                        <DataGridTextColumn Header="رقم الفاتورة" Binding="{Binding InvoiceNumber}" Width="*"/>
                        <DataGridTextColumn Header="المبلغ" Binding="{Binding Amount}" Width="*"/>
                        <DataGridTextColumn Header="المستخدم" Binding="{Binding Username}" Width="*"/>
                        <DataGridTextColumn Header="الوصف" Binding="{Binding Description}" Width="2*"/>
                        <DataGridTemplateColumn Header="عرض التفاصيل">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="🔍" Width="40" 
                                            Command="{Binding DataContext.OpenInvoiceDetailsCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <!-- تبويب العملاء -->
            <TabItem Header="العملاء">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="3*"/>
                    </Grid.ColumnDefinitions>

                    <!-- قائمة العملاء -->
                    <ListBox ItemsSource="{Binding Clients}"
                             SelectedItem="{Binding SelectedClient}"
                             DisplayMemberPath="Name"
                             Margin="10"/>

                    <!-- فواتير العميل -->
                    <DataGrid Grid.Column="1"
                              ItemsSource="{Binding SelectedClientInvoices}"
                              AutoGenerateColumns="False"
                              Margin="10"
                              IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="رقم الفاتورة" Binding="{Binding InvoiceNumber}" />
                            <DataGridTextColumn Header="التاريخ" Binding="{Binding Date, StringFormat=\{0:yyyy-MM-dd\}}" />
                            <DataGridTextColumn Header="القيمة" Binding="{Binding TotalAmount}" />
                            <DataGridTextColumn Header="الحالة" Binding="{Binding Status}" />
                            <DataGridTemplateColumn Header="عرض التفاصيل">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="🔍" Width="40" 
                                                Command="{Binding DataContext.OpenInvoiceDetailsCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- ✅ أزرار العمليات -->
        <DockPanel Grid.Row="3" Margin="0,5">
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                <Button Content="إضافة" Width="120" Margin="5" Command="{Binding AddTransactionCommand}" />
                <Button Content="تعديل" Width="80" Margin="5" Command="{Binding EditTransactionCommand}" />
                <Button Content="حذف" Width="80" Margin="5" Command="{Binding DeleteTransactionCommand}" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                <Button Content="تحديث" Width="80" Margin="5" Command="{Binding RefreshCommand}" />
                <Button Content="تصدير" Width="100" Margin="5" Command="{Binding ExportCommand}" />
                <Button Content="طباعة" Width="80" Margin="5" Command="{Binding PrintCommand}" />
            </StackPanel>
        </DockPanel>
    </Grid>
</UserControl>
