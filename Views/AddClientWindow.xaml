<Window x:Class="ETAG_ERP.Views.AddClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="إضافة عميل جديد" Height="700" Width="750"
        WindowStartupLocation="CenterOwner"
        Background="#F8F8F8" FontFamily="Segoe UI"
        FlowDirection="RightToLeft">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- عنوان الشاشة -->
        <TextBlock Text="كارتة عميل" FontSize="22" FontWeight="Bold" Foreground="#4A90E2" Margin="0,0,0,20"/>

        <!-- المدخلات -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel VerticalAlignment="Top">

                <!-- بيانات أساسية -->
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="اسم العميل:" Width="120" VerticalAlignment="Center" FontSize="16"/>
                    <TextBox x:Name="ClientNameTextBox" Width="500" Height="30"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="العنوان:" Width="120" VerticalAlignment="Center" FontSize="16"/>
                    <TextBox x:Name="AddressTextBox" Width="500" Height="30"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="رقم الهاتف:" Width="120" VerticalAlignment="Center" FontSize="16"/>
                    <TextBox x:Name="PhoneTextBox" Width="240" Height="30"/>
                    <TextBlock Width="108" VerticalAlignment="Stretch" FontSize="16" Margin="10,0,0,0"><Run FlowDirection="RightToLeft" Text="الرقم ا"/><Run FlowDirection="RightToLeft" Language="ar-eg" Text="ل"/><Run FlowDirection="RightToLeft" Language="ar-eg" Text="موحد"/><Run Text=":"/></TextBlock>
                    <TextBox x:Name="FaxTextBox" Width="143" Height="30"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="البريد الاليكتروني :" Width="120" VerticalAlignment="Center" FontSize="16"/>
                    <TextBox x:Name="EmailTextBox" Width="500" Height="30"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="مجال العمل:" Width="120" VerticalAlignment="Center" FontSize="16"/>
                    <TextBox x:Name="BusinessFieldTextBox" Width="500" Height="30"/>
                </StackPanel>

                <!-- بيانات مسؤلين -->
                <TextBlock Text="بيانات مسؤلين" FontSize="18" FontWeight="Bold" Foreground="#4A90E2" Margin="0,15,0,5"/>
                <DataGrid x:Name="ContactsDataGrid" AutoGenerateColumns="False" Height="150" CanUserAddRows="True" Margin="0,5">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="الاسم" Binding="{Binding Name}" Width="*"/>
                        <DataGridTextColumn Header="الوظيفة" Binding="{Binding JobTitle}" Width="*"/>
                        <DataGridTextColumn Header="التليفون" Binding="{Binding Phone}" Width="*"/>
                        <DataGridTextColumn Header="البريد الإلكتروني" Binding="{Binding Email}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- تقييم الشركة -->
                <TextBlock Text="تقييم الشركة" FontSize="18" FontWeight="Bold" Foreground="#4A90E2" Margin="0,15,0,5"/>

                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="المهندس:" Width="120" VerticalAlignment="Center" FontSize="16"/>
                    <TextBox x:Name="EngineerNameTextBox" Width="200" Height="30"/>
                    <TextBlock Text="تاريخ التقييم:" Width="120" VerticalAlignment="Center" FontSize="16" Margin="20,0,0,0"/>
                    <DatePicker x:Name="EvaluationDatePicker" Width="180" Height="30"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="المسؤول عن التقييم:" Width="160" VerticalAlignment="Center" FontSize="16"/>
                    <TextBox x:Name="EvaluatorTextBox" Width="240" Height="30"/>
                </StackPanel>

                <!-- خانة التقييم + تشيك بوكسات -->
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="التقييم:" Width="120" VerticalAlignment="Center" FontSize="16"/>
                    <TextBox x:Name="CompanyEvaluationTextBox" Width="200" Height="30" Margin="0,0,10,0"/>
                    <CheckBox x:Name="RatingGoodCheckBox" Content="جيد" Margin="10,0"/>
                    <CheckBox x:Name="RatingAverageCheckBox" Content="متوسط" Margin="10,0"/>
                    <CheckBox x:Name="RatingPoorCheckBox" Content="مقبول" Margin="10,0"/>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>

        <!-- أزرار -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="حفظ" Width="100" Margin="10" Click="SaveButton_Click" Background="#4A90E2" Foreground="White"/>
            <Button Content="طباعة" Width="100" Margin="10" Click="PrintButton_Click" Background="#FF55AB3E" Foreground="White"/>
            <Button Content="إلغاء" Width="100" Margin="10" Click="CancelButton_Click" Background="#ccc" Foreground="Black"/>
        </StackPanel>
    </Grid>
</Window>
