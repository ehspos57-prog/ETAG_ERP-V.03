<!-- Views/AddUserWindow.xaml -->
<Window x:Class="ETAG_ERP.Views.AddUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="إضافة مستخدم جديد" Height="520" Width="440"
        FlowDirection="RightToLeft" FontFamily="Segoe UI" WindowStartupLocation="CenterOwner">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- اسم المستخدم -->
        <TextBlock Text="اسم المستخدم:" Grid.Row="0" VerticalAlignment="Center" Margin="0,0,0,6"/>
        <TextBox x:Name="txtUsername" Grid.Row="0" Margin="120,0,0,6" Width="270"/>

        <!-- كلمة المرور -->
        <TextBlock Text="كلمة المرور:" Grid.Row="1" VerticalAlignment="Center" Margin="0,0,0,6"/>
        <PasswordBox x:Name="txtPassword" Grid.Row="1" Margin="120,0,0,6" Width="270"/>

        <!-- الاسم الكامل -->
        <TextBlock Text="الاسم الكامل:" Grid.Row="2" VerticalAlignment="Center" Margin="0,0,0,6"/>
        <TextBox x:Name="txtFullName" Grid.Row="2" Margin="120,0,0,6" Width="270"/>

        <!-- رتبة المستخدم -->
        <TextBlock Text="رتبة المستخدم:" Grid.Row="3" VerticalAlignment="Center" Margin="0,0,0,6"/>
        <ComboBox x:Name="cmbRole" Grid.Row="3" Margin="120,0,0,6" Width="270">
            <ComboBoxItem Content="مدير"/>
            <ComboBoxItem Content="موظف"/>
            <ComboBoxItem Content="مستخدم عادي"/>
        </ComboBox>

        <!-- الصلاحيات -->
        <GroupBox Header="صلاحيات المستخدم" Grid.Row="4" Margin="0,10,0,0">
            <ScrollViewer Height="240" VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="PermissionsPanel" Margin="6,2,6,6">
                    <CheckBox Content="عرض المبيعات" Margin="0,5"/>
                    <CheckBox Content="إضافة مبيعات" Margin="0,5"/>
                    <CheckBox Content="تعديل مبيعات" Margin="0,5"/>
                    <CheckBox Content="حذف مبيعات" Margin="0,5"/>
                    <CheckBox Content="عرض المشتريات" Margin="0,5"/>
                    <CheckBox Content="إضافة مشتريات" Margin="0,5"/>
                    <CheckBox Content="تعديل مشتريات" Margin="0,5"/>
                    <CheckBox Content="حذف مشتريات" Margin="0,5"/>
                    <CheckBox Content="إدارة المستخدمين" Margin="0,5"/>
                    <CheckBox Content="عرض التقارير" Margin="0,5"/>
                    <!-- أضف أي صلاحيات إضافية تحتاجها بنفس النمط -->
                </StackPanel>
            </ScrollViewer>
        </GroupBox>

        <!-- الأزرار -->
        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
            <Button Content="💾 حفظ" Width="120" Margin="10,0" Click="SaveUser_Click" Background="#FF3F79D8" Foreground="White"/>
            <Button Content="❌ إلغاء" Width="120" Margin="10,0" Click="Cancel_Click" Background="#f44336" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
