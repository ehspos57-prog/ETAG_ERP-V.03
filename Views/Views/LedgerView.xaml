<UserControl x:Class="ETAG_ERP.Views.LedgerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             FlowDirection="RightToLeft"
             Background="#F8F8F8"
             MinHeight="800"
             MinWidth="1200">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 🔍 فلاتر البحث -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0 0 0 10">
            <ComboBox Width="150" Margin="5"
                      ItemsSource="{Binding LedgerTypes}"
                      SelectedItem="{Binding SelectedLedgerType}"
                      ToolTip="نوع الحساب (عميل، مورد، مشروع، مصروفات)" />

            <ComboBox Width="200" Margin="5"
                      ItemsSource="{Binding AccountsList}"
                      SelectedItem="{Binding SelectedAccount}"
                      DisplayMemberPath="Name"
                      ToolTip="اختر الحساب / العميل / المشروع" />

            <TextBlock Text="من:" Margin="5" VerticalAlignment="Center"/>
            <DatePicker Width="130" SelectedDate="{Binding FromDate}" Margin="0,0,10,0"/>

            <TextBlock Text="إلى:" Margin="5" VerticalAlignment="Center"/>
            <DatePicker Width="130" SelectedDate="{Binding ToDate}" Margin="0,0,10,0"/>

            <TextBox Width="250" Margin="5" Text="{Binding SearchText}" ToolTip="ابحث عن وصف/مرجع"/>
            <Button Content="تصفية" Width="100" Margin="5" Command="{Binding FilterCommand}" />
            <Button Content="مسح" Width="80" Margin="5" Command="{Binding ClearFilterCommand}" />
        </StackPanel>

        <!-- 📋 جدول كشف الحساب -->
        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding LedgerList}"
                  SelectedItem="{Binding SelectedEntry}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  Margin="0 0 0 10"
                  AlternatingRowBackground="#F0F0F0"
                  HeadersVisibility="Column">
            <DataGrid.Columns>
                <DataGridTextColumn Header="التاريخ" Binding="{Binding Date, StringFormat=d}" Width="*"/>
                <DataGridTextColumn Header="المرجع" Binding="{Binding Reference}" Width="*"/>
                <DataGridTextColumn Header="الوصف" Binding="{Binding Description}" Width="2*"/>
                <DataGridTextColumn Header="مدين" Binding="{Binding Debit}" Width="*"/>
                <DataGridTextColumn Header="دائن" Binding="{Binding Credit}" Width="*"/>
                <DataGridTextColumn Header="الرصيد" Binding="{Binding Balance}" Width="*"/>
                <DataGridTextColumn Header="المشروع/التصنيف" Binding="{Binding Category}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- ✅ شريط العمليات -->
        <DockPanel Grid.Row="2" Margin="0,5">
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                <Button Content="➕ إضافة" Width="120" Margin="5" Command="{Binding AddCommand}" />
                <Button Content="✏ تعديل" Width="100" Margin="5" Command="{Binding EditCommand}" />
                <Button Content="🗑 حذف" Width="100" Margin="5" Command="{Binding DeleteCommand}" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                <TextBlock Text="{Binding TotalSummary}" FontWeight="Bold" Margin="10,0" VerticalAlignment="Center"/>
                <Button Content="🔄 تحديث" Width="100" Margin="5" Command="{Binding RefreshCommand}" />
                <Button Content="⬇ تصدير" Width="100" Margin="5" Command="{Binding ExportCommand}" />
                <Button Content="🖨 طباعة" Width="100" Margin="5" Command="{Binding PrintCommand}" />
            </StackPanel>
        </DockPanel>
    </Grid>
</UserControl>
