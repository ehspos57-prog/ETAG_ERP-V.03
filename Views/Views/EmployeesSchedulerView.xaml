<UserControl x:Class="ETAG_ERP.Views.EmployeesSchedulerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#F7F7F7"
             FontFamily="Segoe UI"
             FlowDirection="RightToLeft"
             Height="850" Width="1400">

    <!-- 🎨 الموارد (ستايل الكروت والـ Shadow) -->
    <UserControl.Resources>
        <DropShadowEffect x:Key="SoftShadow" BlurRadius="12" ShadowDepth="2" Opacity="0.25"/>

        <Style x:Key="KpiCard" TargetType="Border">
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Margin" Value="6"/>
            <Setter Property="Padding" Value="14"/>
            <Setter Property="Effect" Value="{StaticResource SoftShadow}"/>
        </Style>

        <Style x:Key="MiniCard" TargetType="Border" BasedOn="{StaticResource KpiCard}">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E6E6E6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- العنوان + الفلاتر -->
            <RowDefinition Height="Auto"/>
            <!-- KPIs -->
            <RowDefinition Height="*"/>
            <!-- الجداول -->
        </Grid.RowDefinitions>

        <!-- ================== العنوان والفلاتر ================== -->
        <DockPanel Grid.Row="0" LastChildFill="True" Margin="0,0,0,16">
            <TextBlock Text="👨‍💼 إدارة الموظفين والمهام وخط السير"
                       FontSize="26" FontWeight="Bold" Foreground="#2C3E50"
                       VerticalAlignment="Center" Margin="0,0,12,0"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <TextBlock Text="📅 التاريخ:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                <DatePicker Width="150" Margin="0,0,10,0"/>
                <TextBlock Text="⚡ الحالة:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                <ComboBox Width="160" SelectedIndex="0">
                    <ComboBoxItem Content="الكل"/>
                    <ComboBoxItem Content="مجدول"/>
                    <ComboBoxItem Content="جاري"/>
                    <ComboBoxItem Content="مكتمل"/>
                    <ComboBoxItem Content="مؤجل"/>
                </ComboBox>
                <TextBox Width="220" Height="32" Margin="10,0,0,0"/>
            </StackPanel>
        </DockPanel>

        <!-- ================== بطاقات KPI ================== -->
        <UniformGrid Grid.Row="1" Columns="4" Margin="0,0,0,16">
            <Border Style="{StaticResource KpiCard}" Background="#4CAF50">
                <StackPanel>
                    <TextBlock Text="إجمالي الموظفين" Foreground="White" FontSize="14" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding TotalEmployees}" Foreground="White" FontSize="22" FontWeight="Bold"/>
                </StackPanel>
            </Border>
            <Border Style="{StaticResource KpiCard}" Background="#2196F3">
                <StackPanel>
                    <TextBlock Text="المهام الجارية" Foreground="White" FontSize="14" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding ActiveTasks}" Foreground="White" FontSize="22" FontWeight="Bold"/>
                </StackPanel>
            </Border>
            <Border Style="{StaticResource KpiCard}" Background="#FF9800">
                <StackPanel>
                    <TextBlock Text="المهام المؤجلة" Foreground="White" FontSize="14" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding PendingTasks}" Foreground="White" FontSize="22" FontWeight="Bold"/>
                </StackPanel>
            </Border>
            <Border Style="{StaticResource KpiCard}" Background="#9C27B0">
                <StackPanel>
                    <TextBlock Text="خطوط السير اليوم" Foreground="White" FontSize="14" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding TodayRoutes}" Foreground="White" FontSize="22" FontWeight="Bold"/>
                </StackPanel>
            </Border>
        </UniformGrid>

        <!-- ================== الجداول الرئيسية ================== -->
        <TabControl Grid.Row="2" Background="White" BorderThickness="0" Padding="8">
            <!-- الموظفين -->
            <TabItem Header="👤 الموظفين">
                <DataGrid ItemsSource="{Binding Employees}" AutoGenerateColumns="False" CanUserAddRows="False"
                          HeadersVisibility="Column" AlternatingRowBackground="#FFF7F7F7"
                          RowHeight="40" FontSize="14" Margin="4">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60"/>
                        <DataGridTextColumn Header="الاسم" Binding="{Binding Name}" Width="200"/>
                        <DataGridTextColumn Header="الوظيفة" Binding="{Binding Role}" Width="160"/>
                        <DataGridTextColumn Header="الهاتف" Binding="{Binding Phone}" Width="150"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <!-- المهام -->
            <TabItem Header="📋 المهام">
                <DataGrid ItemsSource="{Binding Tasks}" AutoGenerateColumns="False" CanUserAddRows="False"
                          HeadersVisibility="Column" AlternatingRowBackground="#FFF7F7F7"
                          RowHeight="40" FontSize="14" Margin="4">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60"/>
                        <DataGridTextColumn Header="الموظف" Binding="{Binding EmployeeName}" Width="160"/>
                        <DataGridTextColumn Header="المهمة" Binding="{Binding TaskName}" Width="250"/>
                        <DataGridTextColumn Header="العميل" Binding="{Binding ClientName}" Width="200"/>
                        <DataGridTextColumn Header="التاريخ" Binding="{Binding ScheduledDate, StringFormat=dd/MM/yyyy}" Width="150"/>
                        <DataGridTextColumn Header="الحالة" Binding="{Binding Status}" Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <!-- خط السير -->
            <TabItem Header="🛣️ خط السير">
                <DataGrid ItemsSource="{Binding Routes}" AutoGenerateColumns="False" CanUserAddRows="False"
                          HeadersVisibility="Column" AlternatingRowBackground="#FFF7F7F7"
                          RowHeight="40" FontSize="14" Margin="4">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60"/>
                        <DataGridTextColumn Header="الموظف" Binding="{Binding EmployeeName}" Width="160"/>
                        <DataGridTextColumn Header="من" Binding="{Binding StartLocation}" Width="200"/>
                        <DataGridTextColumn Header="إلى" Binding="{Binding EndLocation}" Width="200"/>
                        <DataGridTextColumn Header="التاريخ" Binding="{Binding Date, StringFormat=dd/MM/yyyy}" Width="150"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
