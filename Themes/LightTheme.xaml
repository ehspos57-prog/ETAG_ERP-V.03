<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ألوان عامة -->
    <Color x:Key="BackgroundColor">#ECF0F1</Color>
    <Color x:Key="SidebarBackgroundColor">#2C3E50</Color>
    <Color x:Key="TopBarBackgroundColor">#34495E</Color>
    <Color x:Key="TextColor">#FFFFFFFF</Color>
    <!-- Note: هذا نص أبيض -->
    <Color x:Key="ButtonHoverColor">#FF394867</Color>

    <!-- فرش -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}" />
    <SolidColorBrush x:Key="SidebarBackgroundBrush" Color="{StaticResource SidebarBackgroundColor}" />
    <SolidColorBrush x:Key="TopBarBackgroundBrush" Color="{StaticResource TopBarBackgroundColor}" />
    <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}" />
    <SolidColorBrush x:Key="ButtonHoverBrush" Color="{StaticResource ButtonHoverColor}" />

    <!-- ألوان الأزرار -->
    <SolidColorBrush x:Key="ButtonBackground" Color="#FFDDDDDD"/>
    <SolidColorBrush x:Key="ButtonForeground" Color="#FF000000"/>
</ResourceDictionary>
